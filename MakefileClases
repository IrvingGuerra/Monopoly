PROJECT = cliente
CFLAGS = -Wall
LDFLAGS = -lm -lpthread
CC = g++ -g3
EXCLUDED_FILES = servidorWEB.cpp
OBJECTS = $(patsubst %.cpp, %.o, $(filter-out $(EXCLUDED_FILES),$(wildcard *.cpp)))

all: $(PROJECT)

%.o: %.cpp
	$(CC) -c $< $(CFLAGS)

$(PROJECT): $(OBJECTS)
	$(CC) -o $@ $^ $(LDFLAGS)

.PHONY: clean

clean:
	rm -f $(OBJECTS) $(PROJECT)

run:
	./$(PROJECT)

